<!-- MAIN CONTENT FOR CONTACT-US -->
<div class="content" id="content-contact">
    <!-- General Contact Info -->
    <section id="info-contact">
        <h2>Contact Information</h2>
        <p>If you have any questions or concerns, please feel free to contact us using the information below:</p>
        <!-- Address -->
        <address>
            <p><strong>Brandeis Students & Alumni Association</strong></p>
            <p>415 South Street</p>
            <p>Waltham, MA 02453</p>
            <p>Phone: (123) 456-7890</p>
            <p>Email: <a href="mailto:astevenson@brandeis.edu">studentsalumniassociation@brandeis.com</a></p>
        </address>
    </section>
    
    <!-- Contact Form -->
    <section id="form-contact">
        <h3>Contact Us!</h3>

        <!-- Short Answer Fields -->
        <div id="short-fields-form">
            <div id="name-form-contact">
                <label for="name">Name:</label>
                <input type="text" id="name-field-form-contact" name="name" required><br><br>
            </div>
            <div id="email-form-contact">
                <label for="email">Email:</label>
                <input type="email" id="email-field-form-contact" name="email" required><br><br>
            </div>
        </div>
        
        <!-- Message Form -->
        <label for="message">Message:</label><br>
        <textarea id="message-form-contact" name="message" rows="4" required></textarea><br><br>
        
        <!-- Putting this in a div so I can center the button. -->
        <div class="submit-button button-container" id="button-form">
            <input class="submit-button dark-button" type="submit" id="submit-button" value="Send">
        </div>
    </section>
</div>